{
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "server": "localhost",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "Hi-IE-hackathon",
            "username": "user",
            "password": "password",
            "database": "mydatabase"
